# .env.example for yt-chat

# Port for the Express server (default: 8080)
PORT=8080

# OpenAI API key (get from https://platform.openai.com/account/api-keys)
OPENAI_API_KEY=your-openai-api-key-here

# YouTube Data API key (get from https://console.cloud.google.com/apis/credentials)
YOUTUBE_API_KEY=your-youtube-api-key-here

# Admin API key for /api/admin/stats (set to a strong random value, keep secret)
ADMIN_API_KEY=your-admin-api-key-here

# (Optional) Node environment (development/production)
NODE_ENV=development
